clc; 
clear; 

 
cd"C:\ANALOG LAB STIMULATIONS" 
exec("spolarplot.sci") 
s=%s; 
N=s+3; 
D=s^2+3*s+2; 
Hc=cont_frm(N,D); 
disp('Controllable form =');  
ssprint(Hc); 
 
Ho=syslin('c',(Hc.A)',(Hc.C)',(Hc.B)',Hc.D); 
disp('Observable form =');  
ssprint(Ho); 
 
A=diag(roots(D)); 
B=[1;1]; 
C=pf_residue(N,D)'; 
D=Hc.D; 
 
Hj=syslin('c',A,B,C,D); 
disp('Jordan canonical form =');  
ssprint(Hj);
